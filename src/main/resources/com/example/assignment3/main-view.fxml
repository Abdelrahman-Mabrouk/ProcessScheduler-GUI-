<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assignment3.SchedulerController" spacing="10" alignment="CENTER">
  <Label text="CPU Scheduler Simulator" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
  <TableView fx:id="processTable" prefWidth="600">
    <columns>
      <TableColumn text="Process" fx:id="colName"/>
      <TableColumn text="Arrival Time" fx:id="colArrivalTime"/>
      <TableColumn text="Burst Time" fx:id="colBurstTime"/>
      <TableColumn text="Priority" fx:id="colPriority"/>
    </columns>
  </TableView>
  <Button text="Add Process" onAction="#onAddProcess"/>
  <Button text="Run Scheduler" onAction="#onRunScheduler"/>
</VBox>
